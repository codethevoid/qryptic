enum EventType {
  click
  scan
}

model Event {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // event details
  destination          String
  type                 EventType
  ip                   String
  continent            String
  country              String
  region               String
  countryRegion        String
  city                 String
  latitude             String
  longitude            String
  userAgent            String
  browser              String
  browserVersion       String
  deviceType           String
  deviceModel          String
  deviceVendor         String
  browserEngine        String
  browserEngineVersion String
  os                   String
  osVersion            String
  cpu                  String
  referrer             String

  // relations
  Link     Link   @relation(fields: [linkId], references: [id])
  linkId   String
  team     Team   @relation(fields: [teamId], references: [id])
  teamId   String
  domain   Domain @relation(fields: [domainId], references: [id])
  domainId String
}
