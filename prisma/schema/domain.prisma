model Domain {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  name        String    @unique
  isDefault   Boolean   @default(false)
  isVerified  Boolean   @default(false)
  lastChecked DateTime? // last time the domain was checked
  destination String? // root domain, non-existing links, expired links
  isSubdomain Boolean
  isArchived  Boolean   @default(false)

  // relations
  team   Team    @relation(fields: [teamId], references: [id])
  teamId String
  links  Link[]
  events Event[]
}

// the default domains offered by the app
// users can opt to use these domains (qrypt.co, qrypt.link, etc)
model DefaultDomain {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String   @unique

  // relations
  team   Team    @relation(fields: [teamId], references: [id])
  teamId String
  links  Link[]
  events Event[]
}
